<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/feedbackBG"
    android:orientation="vertical"
    tools:context=".FeedbackActivity">
    <LinearLayout

        android:layout_marginVertical="5dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:text="@string/feedback"
            android:textColor="@color/white"
            android:textFontWeight="800"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="56dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">





        <!--  Email Label -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/mobileNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

android:background="@drawable/inputbgcolor"
            android:layout_marginTop="8dp"
            android:textColorHint="@color/white"

            app:startIconDrawable="@drawable/ic_smartphone"
            app:startIconTint="@color/feedbackText"


            android:layout_marginBottom="8dp">
            <com.google.android.material.textfield.TextInputEditText
android:textColorHint="@color/white"
                android:textColor="@color/feedbackText"
           android:background="@null"
                android:textColorHighlight="@color/white"
                 android:id="@+id/input_mobilenumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
              />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/inputbgcolor"

            android:layout_marginTop="8dp"
            android:textColorHint="@color/feedbackText"
             app:startIconDrawable="@drawable/ic_email"
            app:startIconTint="@color/feedbackText"
            android:layout_marginBottom="8dp">
            <com.google.android.material.textfield.TextInputEditText
                android:textColorHint="@color/white"
                android:background="@null"
                android:textColor="@color/feedbackText"
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="Email" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/messageLayout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/feedbackfieldBG"

            android:layout_marginTop="8dp"
            android:textColorHint="@color/feedbackText"
             app:startIconTint="@color/feedbackText"
            android:layout_marginBottom="8dp" >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_msessage"
              android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:textColorHint="@color/feedbackText"
                 android:gravity="top"
                android:backgroundTint="@color/white"
                android:textColor="@color/feedbackText"

                android:hint="Message"
                android:inputType="textMultiLine"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical" />
        </com.google.android.material.textfield.TextInputLayout>
     <LinearLayout
         android:gravity="center"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <androidx.appcompat.widget.AppCompatButton
             android:id="@+id/btn_sent"
             android:textColor="@color/white"

             android:background="@color/feedbackText"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="24dp"
             android:layout_marginBottom="24dp"
             android:paddingVertical="12dp"
             android:paddingHorizontal="50dp"
             android:text="Submit"/>
     </LinearLayout>
    </LinearLayout>





</LinearLayout>